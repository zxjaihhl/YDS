<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dip" />

            <gradient
                android:centerColor="#5C5C5C"
                android:centerY="0.5"
                android:endColor="#5C5C5C"
                android:startColor="#5C5C5C"
                android:type="linear" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip  android:clipOrientation="vertical"
            android:gravity = "bottom">
            <shape>
                <corners android:radius="8dip" />
                <gradient
                    android:centerColor="#66CD00"
                    android:endColor="#7FFF00"
                    android:startColor="#71C671"
                    android:angle="-90"
                    android:centerY="50%"
                    android:centerX="50%"

                    />
            </shape>
        </clip>
    </item>

</layer-list>
